<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ngtiv"
    app:startDestination="@id/listUserFragment">

    <fragment
        android:id="@+id/listUserFragment"
        android:name="com.example.myapplication4.ListUserFragment"
        android:label="fragment_list_user"
        tools:layout="@layout/fragment_list_user">
        <action
            android:id="@+id/action_listUserFragment_to_createUserFragment"
            app:destination="@id/createUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/createUserFragment"
        android:name="com.example.myapplication4.CreateUserFragment"
        android:label="fragment_create_user"
        tools:layout="@layout/fragment_create_user" >
        <action
            android:id="@+id/action_createUserFragment_to_checkUserFragment"
            app:destination="@id/checkUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkUserFragment"
        android:name="com.example.myapplication4.CheckUserFragment"
        android:label="fragment_check_user"
        tools:layout="@layout/fragment_check_user" />
</navigation>