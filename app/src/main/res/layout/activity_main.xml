<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">
	<LinearLayout
		android:id="@+id/panel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:ignore="MissingConstraints">
		<ImageView
			android:id="@+id/iv_block_one"
			android:layout_width="200dp"
			android:layout_height="500px"
			/>
		<ImageView
			android:id="@+id/iv_block_two"
			android:layout_width="wrap_content"
			android:layout_height="500px"
			
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/panel"
		>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>
			<TextView
				android:id="@+id/tv_title_video_one"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Длиные названия кино"
				/>
			<TextView
				android:id="@+id/tv_data_video_one"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Длиные названия кино"
				/>
			<TextView
				android:id="@+id/coment_video_one"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Длиные названия кино"
				/>
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="50dp"
			android:orientation="vertical"
			android:layout_gravity="right"
			>
			
			<TextView
				android:id="@+id/tv_title_video_two"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Длиные названия кино"
				/>
			
			<TextView
				android:id="@+id/tv_data_video_two"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Длиные названия кино" />
			
			<TextView
				android:id="@+id/coment_video_two"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Длиные названия кино" />
		
		</LinearLayout>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>