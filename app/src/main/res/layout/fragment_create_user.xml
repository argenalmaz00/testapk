<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateUserFragment"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you name: "
        android:textSize="30dp"
        />
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="write here you name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="you age :"
        android:textSize="30dp"
        />
    <EditText
        android:id="@+id/et_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="write here you age"
        android:inputType="number"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="icon iavatar"
        android:textSize="30dp"
        />
    <EditText
        android:id="@+id/et_icon_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Uri icon"
        />
    <Button
        android:id="@+id/bt_create_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add paspart"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />


</LinearLayout>