<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MainStore.ListAdapter.TovarOpenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_icon_tovar_activty"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            tools:src="@drawable/ic_launcher_background"
            />
        <TextView
            android:id="@+id/tv_name_tovar_activty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="hello towar"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/tv_date_activty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10-20-2012"
            />
        <TextView
            android:id="@+id/tv_discrtops_activty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="hellow world andfnughhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>