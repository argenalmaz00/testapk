<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".ui.Fragments.NotesEdit.NoteEditFragment">

    <LinearLayout
        android:id="@+id/linderLayaout_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="start">

        <ImageButton
            android:id="@+id/bt_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back"
            android:background="@color/black"
            android:layout_margin="3dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="14 Fer."
            android:textSize="20sp"
            android:textColor="#E6E6E6"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            tools:text="12:30"
            android:textSize="16sp"
            android:textColor="@color/low_sulfur"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="22dp"
        android:textColor="@color/low_yeellow"
        android:layout_margin="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/linderLayaout_edit"
        app:layout_constraintBottom_toTopOf="@id/panel_color">

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            tools:text="hello Title"
            android:textColor="@color/white"
            android:hint="Title"
            android:textColorHint="@color/low_sulfur"
            android:paddingHorizontal="13dp" />

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:paddingHorizontal="10dp"
            tools:text="Hello comment!"
            android:textColor="@color/white"
            android:hint="ples Write text..."
            android:textColorHint="@color/low_sulfur"
            android:gravity="start" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>